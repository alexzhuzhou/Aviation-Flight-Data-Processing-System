# Example application configuration
# Copy this file to application.yml and update with your actual values

spring:
  data:
    mongodb:
      host: localhost
      port: 27017
      database: aviation_db

# Oracle database configuration for Sigma integration
oracle:
  host: your-oracle-host
  port: 1521
  service: your-service-name
  username: ${ORACLE_USERNAME:your-username}
  password: ${ORACLE_PASSWORD:your-password}

server:
  port: 8080

logging:
  level:
    com.example: INFO
    org.springframework.data.mongodb: WARN
    org.springframework.jdbc: DEBUG

# SETUP INSTRUCTIONS:
# 1. Copy this file to application.yml
# 2. Update the Oracle connection details with your actual values
# 3. Set environment variables:
#    export ORACLE_USERNAME=your-actual-username
#    export ORACLE_PASSWORD=your-actual-password
# 4. Or replace ${ORACLE_USERNAME:your-username} with actual values (NOT recommended for production)
